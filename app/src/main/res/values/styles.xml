<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

        <item name="android:colorBackground">@color/color_background</item>
        <item name="android:colorForeground">@color/divider</item>
        <item name="android:navigationBarColor">@color/gray_darkest</item>
        <item name="android:statusBarColor">@color/gray_darkest</item>
        <item name="android:textColor">@color/gray_darkest</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>

        <item name="android:colorButtonNormal">@color/red</item>
        <item name="android:textColorSecondaryInverse">@color/gray_brighter</item>

    </style>

    <style name="AppTheme.ToolbarStyle" parent="Theme.AppCompat">
        <!--<item name="actionOverflowButtonStyle">@style/AppTheme.OverflowButtonStyle</item>-->
        <item name="android:textColor">@color/gray_brightest</item>
        <item name="titleTextColor">@color/gray_brightest</item>
        <item name="android:background">@color/gray_darker</item>
        <item name="titleTextAppearance">
            @style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse
        </item>
        <item name="android:titleTextAppearance">
            @style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse
        </item>
        <item name="subtitleTextAppearance">
            @style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle
        </item>
    </style>


</resources>
